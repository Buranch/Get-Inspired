<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id = "@+id/backgrounder"
    android:background="@drawable/luis">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox1"
        android:layout_marginEnd="21dp"

        style="?android:attr/starStyle"
        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="17sp"

        android:singleLine="false"
        android:textColor="#000"
        android:gravity="clip_horizontal"
        android:textAlignment="textStart"

        android:lineSpacingMultiplier = "1.34"
        android:layout_marginTop="30dp"
        android:visibility="visible"
        android:width="270dp"
        android:fontFamily = ""
        android:paddingBottom="15dp"
        android:ellipsize="none"
        android:layout_alignParentTop="true"
        android:text="If we don&apos;t know what we want, we become like a floating balloon. our direction in life is at the mecy of external forces." />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/imageView"
        android:src="@drawable/footer"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/show_index"
        android:paddingTop="10dp"

        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
